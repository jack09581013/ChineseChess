    <script type="text/javascript">
            $(document).ready(function() {
                jQuery.ajax({
                    url: 'http://localhost:8080',
                    type: 'POST',
                    data: JSON.stringify({test: "test"}),
                    dataType: 'text',
                    success: function(result) {
                        $("body").append("nice<br />");
                    },
                    error: function(a, b, c) {
                        $("body").append("damn<br />");
                    }
                });
                $("body").append("done<br />");
            });
    </script>
